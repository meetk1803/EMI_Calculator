<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    tools:context="com.encle.emicalculator.Insuarance_Main">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/home_shadow_gradient_top">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_back_emi"
            android:layout_width="@dimen/_30sdp"
            android:clickable="true"
            android:onClick="txt_back"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:drawableStart="@drawable/round_arrow_back_ios_24"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:textStyle="bold" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/title_insurance"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_40sdp"
            android:columnCount="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/health_card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_health_insurance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/img_health_insurance" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/motor_card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_9sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_motor_ninsurance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/img_motor_insurance" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/home_card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_home_ninsrance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"

                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/img_home_ins" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/fire_card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_fire_ninsurance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/img_fire_ins" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/travel_card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_travel_ninsurance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/img_travel_ins" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/property_card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_property_insurance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/img_property_ins" />
                </FrameLayout>


            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:layout_marginStart="@dimen/_15sdp"
                android:text="@string/header_life_insurance"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/term_life_card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_term_life_insurance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/img_term_life_ins" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/whole_life_card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_whole_life_insurance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/img_whole_life_ins" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/endowment_plans_card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_endowment_plans"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/img_endowment_ins" />
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/unit_linked_Card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_unit_linked_insurance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/img_unit_linked_ins" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/child_plans_card"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/header_child_nplans"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
