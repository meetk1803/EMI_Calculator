<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/app_bg_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.encle.emicalculator.Rate_us_Screen">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/kanit_medium"
        android:gravity="center"
        android:text="RATE US !!!"
        android:textColor="@color/white"
        android:textSize="@dimen/_30sdp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/btn_color"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_20sdp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="top|center"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/app_icon" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_medium"
                android:gravity="center"
                android:text="EMI Calculator"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_14sdp"
                android:fontFamily="@font/kanit_regular"
                android:text="Did you like to calculate EMI ?"
                android:textColor="@color/app_bg_color"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="We are working hard for a better user experience."
                android:textColor="@color/answer_color"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="We'd greatly appreciate if you can rate us"
                android:textColor="@color/answer_color"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />


            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:numStars="5"
                android:progressBackgroundTint="@color/white"
                android:progressTint="#FFC107"
                android:stepSize="1.0" />

            <Button
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/answer_color"
                android:text="Send us a feedback"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit ?"
                android:textColor="@color/app_bg_color"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/kanit_medium"/>

            <LinearLayout
                android:id="@+id/layout_rate_yesno"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/BTN_NO"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_color"
                    android:elevation="0dp"
                    android:outlineSpotShadowColor="#00FFFFFF"
                    android:padding="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="NO"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    app:elevation="0dp"
                    app:shapeAppearanceOverlay="@style/RoundedCornerOverlay"
                    app:strokeColor="@color/white"
                    app:strokeWidth="@dimen/_2sdp" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/BTN_YES"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:elevation="0dp"
                    android:outlineSpotShadowColor="#00FFFFFF"
                    android:padding="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="YES"
                    android:textColor="@color/app_bg_color"
                    android:textSize="@dimen/_15sdp"
                    app:elevation="0dp"
                    app:shapeAppearanceOverlay="@style/RoundedCornerOverlay" />

            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>