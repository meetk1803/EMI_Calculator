<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg_color"
    tools:context="com.encle.emicalculator.Rate_us_Screen">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RATE US !!!"
        android:textSize="@dimen/_30sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/kanit_medium"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_420sdp"
        android:layout_margin="@dimen/_20sdp"
        android:backgroundTint="@color/btn_color"
        app:cardCornerRadius="@dimen/_20sdp"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <com.google.android.material.imageview.ShapeableImageView
               android:layout_width="@dimen/_100sdp"
               android:layout_height="@dimen/_100sdp"
               android:src="@drawable/app_icon"
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_gravity="top|center"/>
           <com.google.android.material.textview.MaterialTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="EMI Calculator"
               android:textSize="@dimen/_20sdp"
               android:textColor="@color/white"
               android:fontFamily="@font/kanit_medium"
               android:gravity="center" />
           <com.google.android.material.textview.MaterialTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Do you like "
               android:textSize="25sp"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"
               android:textStyle="bold"/>

           <com.google.android.material.textview.MaterialTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Home Workout ?"
               android:textSize="25sp"
               android:layout_gravity="center"
               android:textStyle="bold" />

           <com.google.android.material.textview.MaterialTextView
               android:layout_width="302dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="We are working hard for a better"
               android:textSize="20sp"
               android:textStyle="bold" />

           <com.google.android.material.textview.MaterialTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="user experience."
               android:textSize="20sp"
               android:layout_marginLeft="150dp"
               android:textStyle="bold"/>

           <com.google.android.material.textview.MaterialTextView
               android:layout_width="368dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="22dp"
               android:text="We'd greatly appreciate if you can rateus"
               android:textSize="20sp"
               android:textStyle="bold" />

           <RatingBar
               android:id="@+id/ratingBar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:layout_marginLeft="65dp"
               android:layout_marginTop="20dp"
               android:numStars="5"
               android:stepSize="1.0" />

           <Button
               android:layout_width="353dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"
               android:backgroundTint="@color/black"
               android:text="Send us a feedback" />

       </LinearLayout>




    </com.google.android.material.card.MaterialCardView>
</LinearLayout>