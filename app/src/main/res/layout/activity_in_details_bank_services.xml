<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    tools:context="com.encle.emicalculator.Bank_Services">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/home_shadow_gradient_top">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_back_emi"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:clickable="true"
            android:drawableStart="@drawable/round_arrow_back_ios_24"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:onClick="txt_back"
            android:textStyle="bold" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="center"
            android:text="SBI"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

    </FrameLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bank_logo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="top|center"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/img_health_insurance" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_30sdp"
      android:orientation="vertical">

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/health_card"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_60sdp"
          android:layout_marginHorizontal="@dimen/_20sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:backgroundTint="#151D3E"
          app:cardCornerRadius="@dimen/_10sdp"
          app:strokeWidth="0dp"
          android:layout_gravity="center"
          app:cardUseCompatPadding="true">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="4">

              <com.google.android.material.imageview.ShapeableImageView
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:padding="@dimen/_5sdp"
                  android:src="@drawable/ic_bank_balance" />

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:layout_weight="3"
                  android:orientation="vertical">
                  <androidx.appcompat.widget.AppCompatTextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/inter_regular"
                      android:gravity="start"
                      android:text="Check Bank Balance"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_13sdp"
                      android:textStyle="bold" />
                  <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/check_balance_number"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/inter_regular"
                      android:gravity="start"
                      android:drawableEnd="@drawable/round_local_phone_24"
                      android:drawableTint="@color/white"
                      android:autoLink="phone"
                      android:paddingEnd="@dimen/_15sdp"
                      android:textColorLink="@color/white"
                      android:text="18004253800"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_12sdp"
                      android:textStyle="bold" />
              </LinearLayout>
          </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
      <com.google.android.material.card.MaterialCardView
          android:layout_width="match_parent"
          android:layout_height="@dimen/_60sdp"
          android:layout_marginHorizontal="@dimen/_20sdp"
          android:backgroundTint="#151D3E"
          app:cardCornerRadius="@dimen/_10sdp"
          app:strokeWidth="0dp"
          android:layout_gravity="center"
          app:cardUseCompatPadding="true">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="4">

              <com.google.android.material.imageview.ShapeableImageView
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:padding="@dimen/_10sdp"
                  android:src="@drawable/ic_bank_statement" />

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:layout_weight="3"
                  android:orientation="vertical">
                  <androidx.appcompat.widget.AppCompatTextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/inter_regular"
                      android:gravity="start"
                      android:text="Get Mini Statement"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_13sdp"
                      android:textStyle="bold" />
                  <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/get_mini_statement_number"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/inter_regular"
                      android:gravity="start"
                      android:drawableEnd="@drawable/round_local_phone_24"
                      android:drawableTint="@color/white"
                      android:autoLink="phone"
                      android:paddingEnd="@dimen/_15sdp"
                      android:textColorLink="@color/white"
                      android:text="18004253800"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_12sdp"
                      android:textStyle="bold" />
              </LinearLayout>
          </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
      <com.google.android.material.card.MaterialCardView
          android:layout_width="match_parent"
          android:layout_height="@dimen/_60sdp"
          android:layout_marginHorizontal="@dimen/_20sdp"
          android:backgroundTint="#151D3E"
          app:cardCornerRadius="@dimen/_10sdp"
          app:strokeWidth="0dp"
          android:layout_gravity="center"
          app:cardUseCompatPadding="true">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="4">

              <com.google.android.material.imageview.ShapeableImageView
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:padding="@dimen/_7sdp"
                  android:src="@drawable/ic_bank_customer_care" />

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:layout_weight="3"
                  android:orientation="vertical">
                  <androidx.appcompat.widget.AppCompatTextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/inter_regular"
                      android:gravity="start"
                      android:text="Call Customer Care"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_13sdp"
                      android:textStyle="bold" />
                  <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/customer_care_number"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/inter_regular"
                      android:gravity="start"
                      android:drawableEnd="@drawable/round_local_phone_24"
                      android:drawableTint="@color/white"
                      android:autoLink="phone"
                      android:paddingEnd="@dimen/_15sdp"
                      android:textColorLink="@color/white"
                      android:text="18004253800"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_12sdp"
                      android:textStyle="bold" />
              </LinearLayout>
          </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
  </LinearLayout>
</LinearLayout>