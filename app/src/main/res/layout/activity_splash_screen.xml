<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/app_bg_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.encle.emicalculator.Splash_Screen">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/img_homescreen" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/home_1"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/home_2"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"

        />

    <FrameLayout
        android:id="@+id/getstarted_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_15sdp"
        android:layout_gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="start|center"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/home_round1"
            app:shapeAppearance="@style/circleImageView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_65sdp"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/home_round2"
            app:shapeAppearance="@style/circleImageView" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_getstarted"
            android:clickable="true"
            android:onClick="getStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_22sdp"
            android:drawableEnd="@drawable/round_arrow_forward_24"
            android:drawableTint="@color/white"
            android:fontFamily="@font/kanit_medium"
            android:paddingRight="@dimen/_13sdp"
            android:letterSpacing="0.03"
            android:text="@string/title_get_started"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            tools:ignore="OnClick" />
    </FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_share"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_98sdp"
                app:cardBackgroundColor="#04C3FF"
                app:cardCornerRadius="@dimen/_15sdp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_gravity="top|center"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/home_round2"
                    app:shapeAppearance="@style/circleImageView" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/baseline_share_24"
                    android:tint="@color/white"
                    app:shapeAppearance="@style/circleImageView" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:text="@string/txt_share"
                    android:fontFamily="@font/kanit_medium"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/app_bg_color"
                    android:textSize="@dimen/_18sdp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_privacy"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_98sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                app:cardBackgroundColor="#04C3FF"
                app:cardCornerRadius="@dimen/_15sdp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_gravity="top|center"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/home_round2"
                    app:shapeAppearance="@style/circleImageView" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/home_privacy"
                    android:tint="@color/white"
                    app:shapeAppearance="@style/circleImageView" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:text="@string/txt_privacy"
                    android:fontFamily="@font/kanit_medium"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/app_bg_color"
                    android:textSize="@dimen/_18sdp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </GridLayout>

</LinearLayout>