<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg_color"
    android:layout_height="match_parent"
    tools:context="com.encle.emicalculator.LanguageActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/home_shadow_gradient_top"
        tools:ignore="MissingConstraints">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_back_emi"
            android:layout_width="@dimen/_30sdp"
            android:clickable="true"
            android:onClick="txt_back"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:drawableStart="@drawable/round_arrow_back_ios_24"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:textStyle="bold" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/title_select_language"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />
    </FrameLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <ImageView
        android:id="@+id/english"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:onClick="english"
        android:clickable="true"
        android:layout_margin="@dimen/_5sdp"
        android:src="@drawable/english"/>
    <ImageView
        android:id="@+id/hindi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"
        android:onClick="hindi"
        android:clickable="true"
        android:src="@drawable/hindi"/>
    <ImageView
        android:id="@+id/german"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"
        android:onClick="german"
        android:clickable="true"
        android:src="@drawable/german"/>
    <ImageView
        android:id="@+id/french"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"
        android:onClick="french"
        android:clickable="true"
        android:src="@drawable/french"/>
    <ImageView
        android:id="@+id/spenish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"
        android:onClick="spenish"
        android:clickable="true"
        android:src="@drawable/spenish"/>
    <ImageView
        android:id="@+id/italian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"
        android:onClick="italian"
        android:clickable="true"
        android:src="@drawable/italian"/>
    <ImageView
        android:id="@+id/korean"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"
        android:onClick="korean"
        android:clickable="true"
        android:src="@drawable/korean"/>
    <ImageView
        android:id="@+id/malay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"
        android:onClick="malay"
        android:clickable="true"
        android:src="@drawable/malay"/>
    <ImageView
        android:id="@+id/polish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"
        android:onClick="polish"
        android:clickable="true"
        android:src="@drawable/polish"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>