                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/salary_calculator" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
