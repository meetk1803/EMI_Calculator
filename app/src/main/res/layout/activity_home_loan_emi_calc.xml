                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="Simple \nInterest Calculator"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/simple_interest_calculator" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/compound_interest_calc"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="Compound \nInterest Calculator"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/emi_calc" />
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/insurance"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_18sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="Insurance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/insurance" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- MaterialCardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/bank_service"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#04C3FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
